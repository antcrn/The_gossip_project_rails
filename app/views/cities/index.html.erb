<section class="container px-4 px-lg-5">
  <div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
      <!-- Gossip preview-->
      <div class="post-preview">
      <br/>
        <% @cities.each do |city|%>
        <%= city.id %>
          <h2 class="post-title display-4"> <%= city.name %></h2>
          <h3 class="post-subtitle"><i class="blockquote">zip_code: <%= city.zip %></i></h3>
          <%# <%= link_to "voir le gossip", gossip_path(gossip.id) , class: 'link-dark' %>
          <hr class="my-4" />
        <% end %> 
      </div>
    </div>
  </div>
</section>