
<section class='container-fluid '>

<h1>Création de compte</h1>

<%= form_with(model: @user, url: users_path, method: :post, local: true) do |form| %>
  <div class="form-row mb-3">
    <%= form.label :Ton_prénom %>:
    <%= form.text_field :first_name, class:"form-group col-md-2" %>
    <%= form.label :Ton_nom %>:
    <%= form.text_field :last_name, class:"form-group col-md-2" %>
    <%= form.label :username %>
  <%= form.text_field :username, placeholder: "Username" %>
  </div>
  <div class="form-row mb-3">
    <%= form.label :Ta_ville %>:
    <%= form.select(:city_id, City.pluck(:name, :id), {},{:class => 'form-select-sm select-city form-group col-md-2'}) %>
    <%= form.label :Ton_âge %>:
    <%= form.text_field :age, class:"form-group col-md-1" %>
    <%= form.label :Ton_email %>:
    <%= form.text_field :email, class:"form-group col-md-2" %>
  </div>
  <div class="form-row mb-3">
    <%= form.label :Ton_mot_de_passe %>:
    <%= form.password_field :password, class:"form-group col-md-2" %>
    <%= form.label :Confirme_le %>:
    <%= form.password_field :password_confirmation, class:"form-group col-md-2" %>
  </div>
  <div class="form-row mb-3">
    <%= form.label :Description %>:
    <%= form.text_area :description, class:"form-control", style:"width: 50em;height: 7em;"%>
  </div>

  <%= form.submit "Creer le compte", class:"btn btn-outline-dark"%>
<% end %>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>

</section>

<div class="container-fluid">
    <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image"></div>
        <!-- The content half -->
            <div class="col-md-6 bg-light">
                <div class="login d-flex align-items-center py-5">
                <!-- Demo content-->
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-7 mx-auto">
                            <h3 class="display-4">Split page!</h3>
                            <p class="text-muted mb-4">Rejoignez la communauté Gossip.</p>
                            <%= form_with(model: @user, url: users_path, method: :post, local: true) do |form| %>
                                    <div class="form-group mb-3">
                                        <%= text_field_tag :username, nil, placeholder: "Username", class:"form-control rounded-pill border-0 shadow-sm px-4" %>
                                    </div>
                                    <div class="form-group mb-3">
                                        <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control rounded-pill border-0 shadow-sm px-4 text-primary" %>
                                    </div>
                              <%= submit_tag "Log In",class:"btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm"%>

                               <div class="text-center d-flex justify-content-between mt-4"><p>Vous n'avez pas encore de compte <%= link_to "S'inscrire", signup_path , class: 'font-italic text-muted' %></p></div>   
                                <% end %>   
                        </div>
                    </div>
                </div><!-- End -->
            </div>
        </div><!-- End -->

    </div>
</div>
